<div class="container my-md-5">
  <div class="offset-md-2 col-md-8">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted %>
                退会済み
              <% else %>
                有効
              <% end %>
            </td>
            <td><%= link_to "詳細", admins_end_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 d-flex">
        <div class="mx-auto"><%= paginate @users %></div>
      </div>
  </div>
</div>