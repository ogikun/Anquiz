<div class="container my-md-5">
  <div class="offset-md-2 col-md-8">
    <%= form_with url: admins_search_path, local: :true, method: :get do |f| %>
      <div class="form-group d-lg-flex my-auto">
        <div class="mr-1">
          <%= f.search_field :keyword, placeholder: "検索", class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center">
          <div class="my-auto mr-1">
            <%= button_tag type: 'submit', value: "end_user", class: "btn btn-outline-success" do %>
              <span><i class="fas fa-search"></i> 検索</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted %>
                退会済み
              <% else %>
                有効
              <% end %>
            </td>
            <td><%= link_to "詳細", admins_end_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 d-flex">
        <div class="mx-auto"><%= paginate @users %></div>
      </div>
  </div>
</div>