<div class="container my-md-5">
  <div class="offset-md-2 col-md-8">
    <%= form_with url: admins_search_path, local: :true, method: :get do |f| %>
      <div class="form-group d-lg-flex my-auto">
        <div class="mr-1">
          <%= f.search_field :keyword, placeholder: "検索", class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center">
          <div class="my-auto mr-1">
            <%= button_tag type: 'submit', value: "list", class: "btn btn-outline-success" do %>
              <span><i class="fas fa-search"></i> 検索</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>リスト名</th>
          <th>作成者</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.id %></td>
            <td><%= list.title %></td>
            <td><%= list.user.name %></td>
            <td><%= link_to "詳細", admins_list_path(list) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 d-flex">
        <div class="mx-auto"><%= paginate @lists %></div>
      </div>
  </div>
</div>