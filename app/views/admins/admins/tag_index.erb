<div class="container my-md-5">
  <div class="offset-md-3 col-md-6">
    <%= form_with url: admins_search_path, local: :true, method: :get do |f| %>
      <div class="form-group d-lg-flex my-auto">
        <div class="mr-1">
          <%= f.search_field :keyword, placeholder: "検索", class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center">
          <div class="my-auto mr-1">
            <%= button_tag type: 'submit', value: "tag", class: "btn btn-outline-success" do %>
              <span><i class="fas fa-search"></i> 検索</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <th>タグ名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.tag %></td>
            <td>
              <%= link_to admins_tag_path(id: tag.id), method: :delete, class: "text-secondary text-right" do %>
                <div><i class="far fa-times-circle"></i></div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-12 d-flex">
        <div class="mx-auto"><%= paginate @tags %></div>
      </div>
  </div>
</div>