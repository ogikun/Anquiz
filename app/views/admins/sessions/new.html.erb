<div class="container m-md-5">
  <div class="row">
    <div class=" bg-light p-5 offset-md-2 col-md-8 text-dark">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field p-3">
          <%= f.label :email, "メールアドレス"  %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="field p-3">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field text-center p-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions p-3">
          <%= f.submit "ログイン", class: "btn btn-outline-success w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
