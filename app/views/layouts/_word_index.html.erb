<% words.each.with_index(1) do |word, i| %>
  <div class="card text-center mx-auto mb-5">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" id="question<%= i %>-tab" data-toggle="tab" href="#question<%= i %>" role="tab" aria-controls="question<%= i %>" aria-selected="true">問<%= i %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="answer<%= i %>-tab" data-toggle="tab" href="#answer<%= i %>" role="tab" aria-controls="answer<%= i %>" aria-selected="false">解答</a>
        </li>
        <li class="favoriteBtnZone<%= word.id %> nav-item ml-auto">
          <%= render "favorites/favorite_btn", word: word %>
        </li>
      </ul>
    </div>
    <div class="tab-content">
      <div class="card-body tab-pane active" id="question<%= i %>" role="tabpanel" aria-labelledby="question<%= i %>-tab">
        <h5 class="card-title">
          <%= word.question %>
        </h5>
      </div>
      <div class="card-body tab-pane" id="answer<%= i %>" role="tabpanel" aria-labelledby="answer<%= i %>-tab">
        <h5 class="card-title">
          <h5 class="border-bottom">A.　<%= word.answer %></h5><br>
          <%= word.description %>
        </h5>
      </div>
    </div>
  </div>
<% end %>