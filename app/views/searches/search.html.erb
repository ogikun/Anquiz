<% if params[:model] == "search_tag" %>
  <% if @results %>
    <% @results.each do |result| %>
      <div class="card text-center m-5">
        <div class="card-header">
          単語数：<%= result.add_words.count %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= result.title %></h5>
          <p class="card-text"><%= result.about %></p>
          <%= link_to "単語帳を見る", list_path(result), class: "btn btn-info" %>
          <div class="mt-3">
            タグ：
            <% result.tags.each do |tag| %>
              <%= link_to "#{tag.tag}", search_path(keyword: tag.tag, model: "search_tag"), class: "btn btn-sm btn-outline-dark" %>
            <% end %>
          </div>
        </div>
        <div class="card-footer text-muted">
          Created by <%= result.user.name %>
        </div>
      </div>
    <% end %>
  <% else %>
    検索結果はありません
  <% end %>
