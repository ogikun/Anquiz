<div class="container my-md-5">
  <div class="row">
    <div class="bg-light p-5 offset-md-2 col-md-8 border">
    <h2>ユーザー情報変更</h2>
      <%= form_with model: @user, url: updateinfo_path, local:true do |f| %>
        <div class="field p-3">
          <label for="inputName">ユーザーネーム</label><br>
          <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control"  %>
        </div>
        <div class="field p-3">
          <label for="InputEmail">メールアドレス</label><br>
          <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control" %>
        </div>
        <div class="actions p-3 mt-4">
          <%= f.submit "変更", class: "btn btn-outline-success w-100" %>
        </div>
      <% end %>
    </div>
    <div class="px-5 offset-md-2 col-md-8">
    　<div class="row px-3">
        <div class="col-md-6 mb-4">
          <%= link_to 'パスワード変更', edit_user_registration_path, class: "btn btn-outline-secondary w-100" %>
        </div>
        <div class="col-md-6 mb-4">
          <%= link_to '退会する', edit_user_registration_path, class: "btn btn-outline-danger w-100" %>
        </div>
      </div>
    </div>

  </div>
</div>
