<div class="container my-md-5">
  <div class="row">
    <div class="col-md-4 bg-light p-3 mb-3">
      <h2><%= current_user.name %></h2>
      <%= link_to edit_users_path, class: "btn btn-outline-secondary w-100 my-3" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h4>リスト新規作成</h4>
      <%= form_with model: @createList, local: true do |f| %>
        <div class="field py-2">
          <label for="title">リスト名</label>
          <%= f.text_field :title, id: "title", class: "form-control" %>
        </div>
        <div class="field py-2">
          <label for="about">概要</label>
          <%= f.text_area :about, id: "about", class: "form-control" %>
        </div>
        <div class="field py-2">
          <%= f.submit "リスト新規作成", class: "btn btn-outline-success w-100" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card text-center">
        <div class="card-header">
          単語数：<%= current_user.favorites.count %>
        </div>
        <div class="card-body">
          <h5 class="card-title">ブックマーク</h5>
          <%= link_to "マイリスト", bookmark_path, class: "btn btn-info" %>
          <%= link_to "いいねした問題", bookmark_path, class: "btn btn-info" %>
        </div>
      </div>
      <%= render "layouts/list_index", lists: @lists %>
    </div>
  </div>
</div>