<% if word.favorites.find_by(user_id: current_user.id, word_id: word.id).nil? %>
  <%= link_to list_word_favorites_path(list_id: word.lists.ids, user_id: current_user.id, word_id: word.id), method: :post, remote: true do %>
      <p class="text-dark"><i class="far fa-star text-dark"></i> <%= word.favorites.count %></p>
  <% end %>
<% else%>
  <%= link_to list_word_favorites_path(list_id: word.lists.ids, user_id: current_user.id, word_id: word.id), method: :delete, remote: true do %>
    <p class="text-dark"><i class="fas fa-star text-warning"></i> <%= word.favorites.count %></p>
  <% end %>
<% end %>