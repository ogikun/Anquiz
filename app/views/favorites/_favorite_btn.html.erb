<% if user_signed_in? %>
  <% if word.favorites.find_by(user_id: current_user.id, word_id: word.id).nil? %>
    <%= link_to list_word_favorites_path(list_id: word.lists.ids, user_id: current_user.id, word_id: word.id), method: :post, remote: true, class: "text-decoration-none" do %>
        <p class="text-dark"><i class="far fa-star text-dark"></i> <%= word.favorites.count %></p>
    <% end %>
  <% else%>
    <%= link_to list_word_favorites_path(list_id: word.lists.ids, user_id: current_user.id, word_id: word.id), method: :delete, remote: true, class: "text-decoration-none" do %>
      <p class="text-warning"><i class="fas fa-star"></i> <%= word.favorites.count %></p>
    <% end %>
  <% end %>
<% else %>
  <p class="text-dark"><i class="far fa-star"></i> <%= word.favorites.count %></p>
<% end %>
